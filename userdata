echo "step1.install dependencies"
sudo yum install git httpd gcc-c++ make -y
curl -sL https://rpm.nodesource.com/setup_18.x | sudo -E bash -
sudo yum install nodejs -y
sudo systemctl start httpd
sudo systemctl enable httpd

echo "step2.clone git repo"
mkdir /home/ec2-user/lks-course-frontend
git clone https://github.com/SonyVansha/lks-course-frontend.git /home/ec2-user/lks-course-frontend
echo $(ls /home/ec2-user/lks-course-frontend)

echo "step3.create environment"
touch /home/ec2-user/lks-course-frontend/.env
printf "NUXT_ENV_API_URL=http://lks-lb-frontend-716151330.us-east-1.elb.amazonaws.com" >> /home/ec2-user/lks-course-frontend/.env

echo "step4.install and run application"
npm install --prefix /home/ec2-user/lks-course-frontend/
npm run generate --prefix /home/ec2-user/lks-course-frontend/
sudo cp -R /home/ec2-user/lks-course-frontend/dist/* /var/www/html

echo "step5.create virtualhost"
sudo touch /etc/httpd/conf.d/proxy.conf
echo "<VirtualHost *:80>" | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo 'Header set Access-Control-Allow-Origin "*"' | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo 'Header set Access-Control-Allow-Methods "GET, PUT, POST, DELETE, PATCH"' | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo " ProxyPreserveHost On" | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo " ProxyPass /api/ http://internal-lks-lb-backend-1736021725.us-east-1.elb.amazonaws.com/api/" | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo " ProxyPassReverse /api/ http://internal-lks-lb-backend-1736021725.us-east-1.elb.amazonaws.com/api/" | sudo tee -a /etc/httpd/conf.d/proxy.conf
echo "</VirtualHost>" | sudo tee -a /etc/httpd/conf.d/proxy.conf
sudo systemctl restart httpd
sudo systemctl status httpd
echo finish